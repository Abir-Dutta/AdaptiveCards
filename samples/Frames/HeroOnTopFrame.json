{
	"$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
	"type": "AdaptiveView",
	"version": "1.0",
    "body": [
        {
            "type": "Image",
            "url": "${heroImage}"
        },
        {
            "type": "TextBlock",
            "text": "${title}",
            "size": "extraLarge"
        },
        {
            "type": "TextBlock",
            "text": "${subtitle}",
            "size": "large"
        },
        {
            "type": "Container",
            "items": "${body}"
        },
        {
            "type": "ActionSet",
            "actions": "${actions}"
        }
    ]
}