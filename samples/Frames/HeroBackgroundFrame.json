{
	"$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
	"type": "AdaptiveCard",
    "version": "1.0",
    "backgroundImage" :  "${heroImage}",
    "body": [
        {
            "type": "TextBlock",
            "text": "${title}",
            "size": "extraLarge"
        },
        {
            "type": "TextBlock",
            "text": "${subtitle}",
            "size": "large"
        },
        {
            "type": "Container",
            "items": "${body}"
        },
        {
            "type": "ActionSet",
            "actions": "${actions}"
        }
    ]
}